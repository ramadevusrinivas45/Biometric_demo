<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14233C"
    android:padding="16dp">

    <TextView
        android:id="@+id/delay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delay (ms)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/delay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@id/delay_title"
        app:layout_constraintLeft_toRightOf="@id/delay_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/delay_title"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delay_title"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>
